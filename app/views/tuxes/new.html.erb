<br>
<div class="container">
  <div class="form-card">
    <h2>Rent out a Turbo Tux of your own</h2>

  <%= simple_form_for @tux do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: 'btn btn-danger btn-lg' %>
  <% end %>
  <br>
  <%= link_to 'Return to tuxes', tuxes_path, class: "btn btn-outline-danger btn-med" %>
  <br>
  </div>
</div>
