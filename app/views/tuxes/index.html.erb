<div class="border-bottom">
  <div class = "d-flex justify-content-between align-items-center container p-3">
    <p>My Bookings</p>
    <h1>Turbo Tux</h1>
    <p>User Account</p>
  </div>
</div>
<br>
<br>
<div class="container">
<div class="card-grid">
  <% @tuxes.each do |tux| %>
    <%= link_to tux_path(tux) do %>
     <div class="card">
       <%= image_tag 'fabio_tux.jpg', style: 'border-radius: 10%, height: 50px, width: 50px, box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2)' %>
       <%# <%= image_tag 'fabio_tux.jpg' %>
       <h1><%= tux.name %></h1>
       <p class="price">$<%= tux.price %>0</p>
      <p><%= tux.description.truncate(120)%></p>
      <p><button>Book Now</button></p>
     </div>   
    <%end %>
  <% end %>
</div>
</div>






