<div class="container">
<%= form_tag tuxes_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Lookin for some hot stuff"
  %>
  <%= submit_tag "Search", class: "btn btn-danger" %>
<% end %>
<div class="card-grid">
  <% @tuxes.each do |tux| %>
    <%= link_to tux_path(tux) do %>
     <div class="card">
       <%= image_tag "fabio/#{rand(7)}.jpg", style: "border-radius: 50%; height: 200px; width: 200px; margin: 10px 20px; object-fit: cover;"%>
       <%# <%= image_tag 'fabio_tux.jpg' %>
       <h1><%= tux.name %></h1>
       <p class="price">â‚¬<%= tux.price %>0</p>
      <p><%= tux.description.truncate(120)%></p>
      <p><button>Book Now</button></p>
     </div>
    <%end %>
  <% end %>
</div>
</div>






